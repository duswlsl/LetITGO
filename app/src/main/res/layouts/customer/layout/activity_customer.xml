<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sook.cs.letitgo.customer.customer_main">

    <data>

        <variable
            name="activity"
            type="com.sook.cs.letitgo.customer.customer_main" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/btn_store"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="@{activity::menuClick}"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_seller"
                android:tag="1" />

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="@{activity::menuClick}"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_menu"
                android:tag="2" />

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="@{activity::menuClick}"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_map"
                android:tag="3" />

            <ImageButton
                android:id="@+id/btn_liked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="@{activity::menuClick}"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_liked"
                android:tag="4" />

            <ImageButton
                android:id="@+id/btn_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="@{activity::menuClick}"
                android:padding="13dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_my"
                android:tag="5" />

        </LinearLayout>
    </LinearLayout>
</layout>