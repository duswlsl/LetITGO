<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#ff848484"
            android:textSize="12dp" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/acceptStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수령완료"
                android:textSize="12dp"
                android:textColor="#3eabfa"
                android:layout_gravity="top|right"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:focusable="false"
                android:textSize="12dp"
                android:minHeight="0dp"
                android:background="@drawable/accept"
                android:textColor="#ffffff"
                android:text="수락" />

            <Button
                android:id="@+id/btn_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_weight="1"
                android:focusable="false"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:minHeight="0dp"
                android:textColor="#ffffff"
                android:background="@drawable/decline"
                android:text="거절" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="준비시작"
                android:background="@drawable/order_accepted"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:visibility="gone" />


            <Button
                android:id="@+id/btn_ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="준비완료"
                android:background="@drawable/order_accepted"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_ready2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="준비완료"
                android:background="@drawable/order_ready2"
                android:textColor="#ffffff"
                android:clickable="false"
                android:textSize="12dp"
                android:visibility="gone" />



            <TextView
                android:id="@+id/declineStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거절"
                android:textSize="12dp"
                android:textColor="#FFA7A7"
                android:visibility="gone" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>